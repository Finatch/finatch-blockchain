#!/bin/sh

set -e

umask 077

basedir=~/.finatch
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/finatch.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Finatch does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/finatch/finatch-qt "$@"
